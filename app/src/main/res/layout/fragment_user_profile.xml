<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.UserProfile">
    <!-- Relative Height = Xdp - 80dp  -->

    <RelativeLayout
        android:id="@+id/page_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_top_layout"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/user_banner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/grey"
                android:contentDescription="Papel de parede do usuário"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/user_picture_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_picture"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:background="@color/light_grey"
                    android:contentDescription="Foto do usuário"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/Theme.Arbeid.CircularImageView"
                    app:strokeColor="@color/white"
                    app:strokeWidth="12dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_plus" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/profile_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_top_layout"
            android:layout_marginHorizontal="38dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/user_name_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Fulano da Silva"
                    android:textColor="@color/orange"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:contentDescription="Clique para editar o seu nome"
                    android:src="@drawable/icon_edit" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/poppins"
                android:text="Lorem ipsum dolor sit amet sirius melir lorem ipsum dolor sit ame..."
                android:textAlignment="center"
                android:textColor="@color/blue_transparent"
                android:textSize="18sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_links_hug"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_link_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Link para site"
                    android:padding="2dp"
                    android:src="@drawable/icon_plus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/user_link_02"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/Theme.Arbeid.CircularImageView"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="2dp"
                    app:tint="@color/grey" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_link_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Adicionar link"
                    android:padding="2dp"
                    android:src="@drawable/icon_plus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/user_link_03"
                    app:layout_constraintStart_toEndOf="@+id/user_link_01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/Theme.Arbeid.CircularImageView"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="2dp"
                    app:tint="@color/grey" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_link_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Adicionar link"
                    android:padding="2dp"
                    android:src="@drawable/icon_plus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/user_link_04"
                    app:layout_constraintStart_toEndOf="@+id/user_link_02"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/Theme.Arbeid.CircularImageView"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="2dp"
                    app:tint="@color/grey" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_link_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Adicionar link"
                    android:padding="2dp"
                    android:src="@drawable/icon_plus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/user_link_05"
                    app:layout_constraintStart_toEndOf="@+id/user_link_03"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/Theme.Arbeid.CircularImageView"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="2dp"
                    app:tint="@color/grey" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_link_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Adicionar link"
                    android:padding="2dp"
                    android:src="@drawable/icon_plus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/user_link_04"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/Theme.Arbeid.CircularImageView"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="2dp"
                    app:tint="@color/grey" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="Adicionar competência"
                        android:src="@drawable/icon_plus"
                        app:tint="@color/orange" />

                    <TextView
                        android:id="@+id/title_user_skills"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:fontFamily="@font/poppins"
                        android:text="Competências"
                        android:textColor="@color/orange"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="Adicionar competência"
                        android:src="@drawable/icon_plus"
                        app:tint="@color/orange" />

                    <TextView
                        android:id="@+id/title_user_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:fontFamily="@font/poppins"
                        android:text="Experiência"
                        android:textColor="@color/orange"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/profile_bottom_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/profile_bottom_layout"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/profile_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profile_main_layout"
            android:background="@color/white"
            android:minHeight="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/no_post_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="Essa conta ainda não possui postagens."
                android:textAlignment="center"
                android:textColor="@color/blue_transparent"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>